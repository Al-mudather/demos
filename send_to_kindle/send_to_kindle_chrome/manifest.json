{
	"manifest_version": 2,
	"name": "send_to_kindle",
	"description": "A chrome extention to send contents to server",
	"version": "1.0",
	"permissions": [
		"storage"
	],
	"icons": { 
		"128": "img/icon128.png" 
	},
	"background": {
    "scripts": ["jquery-3.1.0.min.js", "event.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/icon128.png"
  },
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"img/icon128.png"
	],
	"permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]
}
